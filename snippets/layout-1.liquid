<div class="layout-1 bg-[#F0ECDC] p-6 rounded-lg mb-8 shadow-md">
  <img
    src="{{ product.featured_image | image_url: 'master' }}"
    alt="{{ product.title }}"
    class="w-full h-auto rounded-lg mb-4"
  >
  <h2 class="text-2xl font-bold text-green mb-2">{{ product.title }}</h2>
  <p class="text-xl font-semibold text-[#1F1904] mb-4">{{ product.price | money }}</p>
  <a
    href="{{ product.url }}"
    class="inline-block text-[#1E6C44] border border-[#1E6C44] px-4 py-2 rounded hover:bg-[#1E6C44] hover:text-white transition"
    >View Details</a
  >
</div>
