<div class="product-rating flex items-center gap-3 mb-3">
  <!-- Star Rating -->
  <div class="stars flex gap-1">
    {% assign j_reviews = product.metafields.judgeme.average_rating | default: 0 %}
    {% assign full_stars = j_reviews | floor %}
    {% assign half_star = j_reviews | modulo: 1 %}
    {% assign next_star = full_stars | plus: 1 %}

    {% for i in (1..5) %}
      {% if i <= full_stars %}
        <!-- full star -->
        <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.286 3.957a1 1 0 00.95.69h4.155c.969 0 1.371 1.24.588 1.81l-3.36 2.44a1 1 0 00-.364 1.118l1.287 3.957c.3.921-.755 1.688-1.538 1.118l-3.36-2.44a1 1 0 00-1.176 0l-3.36 2.44c-.783.57-1.838-.197-1.538-1.118l1.287-3.957a1 1 0 00-.364-1.118L2.038 9.384c-.783-.57-.38-1.81.588-1.81h4.155a1 1 0 00.95-.69l1.286-3.957z"/>
        </svg>
      {% elsif i == next_star and half_star >= 0.5 %}
        <!-- half star (yellow) -->
        <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.286 3.957a1 1 0 00.95.69h4.155c.969 0 1.371 1.24.588 1.81l-3.36 2.44a1 1 0 00-.364 1.118l1.287 3.957c.3.921-.755 1.688-1.538 1.118l-3.36-2.44a1 1 0 00-1.176 0l-3.36 2.44c-.783.57-1.838-.197-1.538-1.118l1.287-3.957a1 1 0 00-.364-1.118L2.038 9.384c-.783-.57-.38-1.81.588-1.81h4.155a1 1 0 00.95-.69l1.286-3.957z"/>
        </svg>
      {% else %}
        <!-- empty star -->
        <svg class="w-5 h-5 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.286 3.957a1 1 0 00.95.69h4.155c.969 0 1.371 1.24.588 1.81l-3.36 2.44a1 1 0 00-.364 1.118l1.287 3.957c.3.921-.755 1.688-1.538 1.118l-3.36-2.44a1 1 0 00-1.176 0l-3.36 2.44c-.783.57-1.838-.197-1.538-1.118l1.287-3.957a1 1 0 00-.364-1.118L2.038 9.384c-.783-.57-.38-1.81.588-1.81h4.155a1 1 0 00.95-.69l1.286-3.957z"/>
        </svg>
      {% endif %}
    {% endfor %}
  </div>

  <!-- Reviews & Sold -->
  <div class="text-sm text-gray-500">
    {% assign j_count = product.metafields.judgeme.review_count | default: 0 %}
    {{ j_count }} reviews | {{ product.total_sales | default: 0 }} sold
  </div>
</div>
