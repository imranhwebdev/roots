<section class="customer-account">
  {%- render 'account-banner' -%}

  <div class="flex flex-col md:flex-row md:flex-nowrap flex-wrap xl:w-11/12 mx-auto gap-6 px-6 justify-between py-10 md:py-16 lg:py-20 xl:py-25">
    <!-- Sidebar Tabs -->
    <aside class="w-full md:w-4/12 xl:w-4/12">
      <ul class="space-y-2">
        <li>
          <button
            class="tab-btn cursor-pointer w-full text-left py-4 px-5 font-medium border rounded-lg bg-[#1E6C44] text-white"
            data-tab="info"
          >
            Personal Information
          </button>
        </li>
        <li>
          <button
            class="tab-btn cursor-pointer w-full text-left py-4 px-5 font-medium border rounded-lg"
            data-tab="orders"
          >
            My Orders
          </button>
        </li>
        <li>
          <button
            class="tab-btn cursor-pointer w-full text-left py-4 px-5 font-medium border rounded-lg"
            data-tab="address"
          >
            Manage Address
          </button>
        </li>
        <li>
          <button
            class="tab-btn cursor-pointer w-full text-left py-4 px-5 font-medium border rounded-lg"
            data-tab="password"
          >
            Password Manager
          </button>
        </li>
        <li>
          <a
            href="{{ routes.account_logout_url }}"
            class="block w-full text-left py-4 px-5 font-medium border rounded-lg"
          >
            Logout
          </a>
        </li>
      </ul>
    </aside>

    <!-- Content Area -->
    <div class="w-full md:w-8/12 xl:w-7/12">
      <!-- Personal Information -->
      <div class="tab-content" id="info">
        <div class="mb-8 w-32 h-32 relative">
          <img
            id="profileImage"
            src="{% if customer.metafields.custom.profile_image %}{{ customer.metafields.custom.profile_image | img_url: '200x200' }}{% else %}https://i.pravatar.cc/200?seed={{ customer.id }}{% endif %}"
            class="rounded-xl object-cover w-full h-full"
            alt="Profile"
          >
          <label for="profileImageInput" class="absolute -bottom-1 -right-1 cursor-pointer">
            <img src="/assets/edit-icon.png" class="w-9 h-9" alt="Edit">
          </label>
          <input type="file" id="profileImageInput" accept="image/*" class="hidden">
        </div>

        {% form 'customer' %}
          {% if form.errors %}
            <div class="mb-4 p-4 bg-red-100 text-red-700 rounded">
              {{ form.errors | default_errors }}
            </div>
          {% endif %}
          {% if form.posted_successfully? %}
            <div class="mb-4 p-4 bg-green-100 text-green-700 rounded">
              Your information has been updated successfully.
            </div>
          {% endif %}

          <div class="grid grid-cols-2 gap-4">
            <div>
              <label>First Name*</label>
              <input
                name="customer[first_name]"
                type="text"
                value="{{ customer.first_name }}"
                required
                class="w-full border rounded-lg py-2 px-3"
              >
            </div>
            <div>
              <label>Last Name*</label>
              <input
                name="customer[last_name]"
                type="text"
                value="{{ customer.last_name }}"
                required
                class="w-full border rounded-lg py-2 px-3"
              >
            </div>
            <div class="col-span-2">
              <label>Email*</label>
              <input
                name="customer[email]"
                type="email"
                value="{{ customer.email }}"
                required
                class="w-full border rounded-lg py-2 px-3"
              >
            </div>
            <div class="col-span-2">
              <label>Phone</label>
              <input
                name="customer[phone]"
                type="tel"
                id="phoneInput"
                value="{{ customer.phone | default: '' }}"
                class="w-full border rounded-lg py-2 px-3"
              >
            </div>
            <div class="col-span-2">
              <label>Gender</label>
              <select id="genderSelect" class="w-full border rounded-lg py-2 px-3">
                <option value="">Select Gender</option>
                <option
                  value="Male"
                  {% if customer.tags contains 'gender_male' %}
                    selected
                  {% endif %}
                >
                  Male
                </option>
                <option
                  value="Female"
                  {% if customer.tags contains 'gender_female' %}
                    selected
                  {% endif %}
                >
                  Female
                </option>
                <option
                  value="Other"
                  {% if customer.tags contains 'gender_other' %}
                    selected
                  {% endif %}
                >
                  Other
                </option>
                <option
                  value="Prefer not to say"
                  {% if customer.tags contains 'gender_prefer_not_to_say' %}
                    selected
                  {% endif %}
                >
                  Prefer not to say
                </option>
              </select>
            </div>
            <div class="col-span-2">
              <button type="submit" class="btn">Update Changes</button>
            </div>
          </div>
        {% endform %}
      </div>

      <!-- Orders -->
      <div class="tab-content hidden" id="orders">
        <h2>My Orders ({{ customer.orders.size }})</h2>
        {% if customer.orders.size > 0 %}
          {% for order in customer.orders %}
            <div class="order-card mb-4 p-4 bg-gray-100 rounded-lg">
              <div class="flex gap-4">
                {% if order.line_items.first.image %}
                  <img
                    src="{{ order.line_items.first.image | img_url: '200x200' }}"
                    class="w-24 h-24 rounded"
                    alt="{{ order.line_items.first.title }}"
                  >
                {% else %}
                  <img src="/assets/product-placeholder.png" class="w-24 h-24 rounded" alt="Product">
                {% endif %}
                <div>
                  <h6>{{ order.line_items.first.title }}</h6>
                  <p>Total: {{ order.total_price | money }}</p>
                  <p>Quantity: {{ order.line_items.first.quantity }}</p>
                  <p>Date: {{ order.created_at | date: '%B %d, %Y' }}</p>
                  <p>Status: {{ order.financial_status }}</p>
                  <a href="{{ order.status_url }}" class="btn mt-2">View Order</a>
                </div>
              </div>
            </div>
          {% endfor %}
        {% else %}
          <p>You haven't placed any orders yet.</p>
          <a href="{{ routes.all_products_collection_url }}" class="btn mt-2">Start Shopping</a>
        {% endif %}
      </div>

      <!-- Address -->
      <div class="tab-content hidden" id="address">
        {% if customer.default_address %}
          <div class="p-4 mb-4 border rounded-lg">
            <p>
              {{ customer.default_address.first_name }}
              {{ customer.default_address.last_name }}
            </p>
            <p>
              {{ customer.default_address.address1 }}
              {% if customer.default_address.address2 %}, {{ customer.default_address.address2 }}{% endif %},
              {{ customer.default_address.city }}, {{ customer.default_address.province }}
              {{ customer.default_address.zip }}
            </p>
          </div>
        {% endif %}
        {% form 'customer_address', customer.new_address %}
          <div class="grid grid-cols-2 gap-4">
            <input
              name="address[first_name]"
              placeholder="First Name"
              value="{{ form.first_name }}"
              class="border rounded-lg py-2 px-3"
            >
            <input
              name="address[last_name]"
              placeholder="Last Name"
              value="{{ form.last_name }}"
              class="border rounded-lg py-2 px-3"
            >
            <input
              name="address[address1]"
              placeholder="Street Address"
              value="{{ form.address1 }}"
              class="border rounded-lg py-2 px-3 col-span-2"
            >
            <input name="address[city]" placeholder="City" value="{{ form.city }}" class="border rounded-lg py-2 px-3">
            <input
              name="address[zip]"
              placeholder="Zip Code"
              value="{{ form.zip }}"
              class="border rounded-lg py-2 px-3"
            >
            <select name="address[province]" class="border rounded-lg py-2 px-3">
              <option value="">Select Province</option>
              {% for province in shop.provinces %}
                <option
                  value="{{ province.code }}"
                  {% if form.province == province.code %}
                    selected
                  {% endif %}
                >
                  {{ province.name }}
                </option>
              {% endfor %}
            </select>
            <select name="address[country]" class="border rounded-lg py-2 px-3">
              <option value="">Select Country</option>
              {% for country in shop.countries %}
                <option
                  value="{{ country.code }}"
                  {% if form.country == country.code %}
                    selected
                  {% endif %}
                >
                  {{ country.name }}
                </option>
              {% endfor %}
            </select>
            <button type="submit" class="btn col-span-2">Save Address</button>
          </div>
        {% endform %}
      </div>

      <!-- Password -->
      <div class="tab-content hidden" id="password">
        {% form 'change_customer_password' %}
          <input
            type="password"
            name="customer[password]"
            placeholder="Current Password"
            class="border rounded-lg py-2 px-3 mb-2"
          >
          <input
            type="password"
            name="customer[new_password]"
            placeholder="New Password"
            class="border rounded-lg py-2 px-3 mb-2"
          >
          <input
            type="password"
            name="customer[new_password_confirmation]"
            placeholder="Confirm New Password"
            class="border rounded-lg py-2 px-3 mb-2"
          >
          <button type="submit" class="btn">Update Password</button>
        {% endform %}
      </div>
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Tabs
    const tabButtons = document.querySelectorAll('.tab-btn');
    const tabContents = document.querySelectorAll('.tab-content');
    tabButtons.forEach((btn) =>
      btn.addEventListener('click', () => {
        tabButtons.forEach((b) => b.classList.remove('bg-[#1E6C44]', 'text-white'));
        tabContents.forEach((c) => c.classList.add('hidden'));
        btn.classList.add('bg-[#1E6C44]', 'text-white');
        const target = document.getElementById(btn.dataset.tab);
        if (target) target.classList.remove('hidden');
      })
    );

    // Avatar preview
    const profileInput = document.getElementById('profileImageInput');
    const profileImg = document.getElementById('profileImage');
    profileInput.addEventListener('change', (e) => {
      const file = e.target.files[0];
      if (file) {
        const reader = new FileReader();
        reader.onload = (ev) => (profileImg.src = ev.target.result);
        reader.readAsDataURL(file);
      }
    });

    // Phone number AJAX update
    const customerForm = document.querySelector('form[action="/account"]');
    if (customerForm) {
      customerForm.addEventListener('submit', (e) => {
        e.preventDefault();
        const formData = new FormData(customerForm);
        fetch('/account', { method: 'POST', body: formData }).then(() => location.reload());
      });
    }

    // Gender update via tags
    const genderSelect = document.getElementById('genderSelect');
    if (genderSelect) {
      genderSelect.addEventListener('change', () => {
        const gender = genderSelect.value.toLowerCase().replace(/\s/g, '_');
        fetch('/account', {
          method: 'POST',
          headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
          body: `customer[tags]=gender_${gender}`,
        }).then(() => console.log('Gender updated'));
      });
    }
  });
</script>

<style>
  .btn {
    background: #1e6c44;
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 0.5rem;
  }
  .tab-btn:hover {
    background: #155a37;
    color: white;
  }
  .tab-content {
    display: block;
  }
  .tab-content.hidden {
    display: none;
  }
</style>
