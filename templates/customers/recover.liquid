<div class="account-section">
  <div class="form-container">
    <h2 class="section-title">Reset Your Password</h2>
    <p class="section-description">Enter your email to receive a password reset link.</p>

    {% form 'recover_customer_password' %}
      {% if form.errors %}
        <div class="form-errors">
          {% for field in form.errors %}
            <p>{{ form.errors.messages[field] }}</p>
          {% endfor %}
        </div>
      {% endif %}

      {% if form.posted_successfully? %}
        <p class="form-success">Check your email for a reset link.</p>
      {% endif %}

      <label for="RecoverEmail">Email</label>
      <input type="email" name="email" id="RecoverEmail" required>

      <button type="submit" class="btn-primary">Send Reset Link</button>
    {% endform %}
  </div>
</div>
