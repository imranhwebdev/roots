<style>
  .swiper-button-next,
  .swiper-button-prev {
    z-index: 99;
    transition: all 0.3s ease-in-out;
    cursor: pointer;
  }
  .swiper-button-prev::after,
  .swiper-button-next::after {
    content: '';
  }
  .swiper-button-next:hover,
  .swiper-button-prev:hover {
    background-color: #ffc801;
  }
  .swiper-button-next svg,
  .swiper-button-prev svg {
    width: 20px;
    height: 20px;
    fill: #fff;
  }
  .swiper-pagination {
    display: flex;
    align-items: center;
    gap: 2px;
    justify-content: center;
  }
  .roots-customer-reviews .swiper-pagination-bullet {
    display: none;
    background-color: #b7d6c6;
    width: 18px !important;
    height: 6px !important;
    border-radius: 30px !important;
  }
  .roots-customer-reviews .swiper-wrapper {
    padding-bottom: 35px !important;
  }
  .roots-customer-reviews .swiper-pagination-bullet-active {
    background-color: #1e6c44 !important;
  }
  @media screen and (max-width: 768px) {
    .roots-customer-reviews .swiper-pagination-bullet {
      display: block;
    }
  }
</style>
{% if section.blocks.size > 0 %}
  <div class="roots-customer-reviews pb-17.5 md:pb-20 lg:pb-22 xl:pb-25 2xl:pb-28">
    <div class="container">
      {% if section.settings.heading != blank %}
        <h2 class="text-2xl md:text-3xl lg:text-4xl xl:text-[44px] text-green !leading-[1.25] font-bold font-armany-bold mb-5.5 md:mb-7 lg:mb-10 xl:mb-12.5 md:ms-3">
          {{ section.settings.heading }}
        </h2>
      {% endif %}

      <div class="relative z-1">
        <div class="swiper review-slider">
          <div class="swiper-wrapper">
            {% for block in section.blocks %}
              <div class="swiper-slide">
                <div class="border border-[#E3E2E0] bg-white rounded-xl p-5 lg:p-9">
                  <div class="flex items-center gap-1.5 mb-3 lg:mb-4 xl:mb-5">
                    {% for i in (1..block.settings.stars) %}
                      <span class="size-5 lg:size-6">
                        <img src="{{ 'review-star.svg' | asset_url }}" alt="star" width="" height="">
                      </span>
                    {% endfor %}
                  </div>
                  <p class="text-sm lg:text-base xl:text-xl text-[#797375] !leading-[1.6] mb-3 md:mb-5 lg:mb-8 xl:mb-10 2xl:mb-12">
                    {{ block.settings.review_text }}
                  </p>
                  <div class="flex items-center gap-2">
                    {% if block.settings.avatar != blank %}
                      <img
                        src="{{ block.settings.avatar | image_url: width:100 }}"
                        class="size-10 lg:size-10 rounded-full"
                        alt="{{ block.settings.name }}"
                        width=""
                        height=""
                      >
                    {% endif %}
                    <div>
                      <p class="text-[#0D2E1D] text-base lg:text-lg xl:text-xl font-medium !leading-[1.5]">
                        {{ block.settings.name }}
                      </p>
                      <p class="text-[#797375] text-xs lg:text-base !leading-[1.4] italic">
                        {{ block.settings.location }}
                      </p>
                    </div>
                  </div>
                </div>
              </div>
            {% endfor %}
          </div>

          <div class="swiper-pagination"></div>
        </div>

        <!-- Navigation -->
        <div class="absolute md:block z-1 w-40 right-0 -top-[31%] lg:flex items-center gap-4">
          <div class="swiper-button-prev bg-[#FFE380] !text-[#0D2E1D] hover:!text-black !size-8 md:!size-14 rounded-full flex items-center justify-center">
            <svg width="17" height="13" viewBox="0 0 17 13" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M6.66797 1L1.16797 6.5M1.16797 6.5L6.66797 12M1.16797 6.5L15.8346 6.5" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </div>
          <div class="swiper-button-next  bg-[#FFE380] !text-[#0D2E1D] hover:!text-black md:!size-14 rounded-full flex items-center justify-center">
            <svg width="17" height="13" viewBox="0 0 17 13" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M10.332 1L15.832 6.5M15.832 6.5L10.332 12M15.832 6.5L1.16536 6.5" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endif %}
<script>
  document.addEventListener('DOMContentLoaded', function () {
    new Swiper('.review-slider', {
      loop: true,
      autoPlay: false,
      speed: 700,
      pagination: {
        el: '.swiper-pagination',
        clickable: true,
      },
      navigation: {
        prevEl: '.swiper-button-prev',
        nextEl: '.swiper-button-next',
      },
      grabCursor: true,
      effect: 'slide',
      breakpoints: {
        320: { slidesPerView: 1.2, spaceBetween: 10 },
        640: { slidesPerView: 2, spaceBetween: 20 },
        1024: { slidesPerView: 3, spaceBetween: 30 },
      },
    });
  });
</script>

{% schema %}
{
  "name": "Customer Reviews",
  "settings": [{ "type": "text", "id": "heading", "label": "Section Heading", "default": "Customer Reviews" }],
  "blocks": [
    {
      "type": "review",
      "name": "Review",
      "settings": [
        { "type": "text", "id": "name", "label": "Customer Name", "default": "John Doe" },
        { "type": "text", "id": "location", "label": "Customer Location", "default": "New York, NY" },
        {
          "type": "textarea",
          "id": "review_text",
          "label": "Review Text",
          "default": "This is a sample customer review."
        },
        { "type": "number", "id": "stars", "label": "Stars (1-5)", "default": 5 },
        { "type": "image_picker", "id": "avatar", "label": "Customer Avatar" }
      ]
    }
  ],
  "presets": [{ "name": "Customer Reviews", "category": "Testimonials" }]
}
{% endschema %}
