<script>
 document.addEventListener("DOMContentLoaded", function () {
  const swiper = new Swiper(".mother-slider", {
    slidesPerView: 3,
    spaceBetween: 20,
    pagination: {
      el: ".swiper-pagination",
      clickable: true,
    },
    navigation: {
      nextEl: ".swiper-button-next",
      prevEl: ".swiper-button-prev",
    },
    breakpoints: {
      320: { slidesPerView: 1 },
      768: { slidesPerView: 2 },
      1024: { slidesPerView: 3 },
    }
  });

  const playButtons = document.querySelectorAll(".mother-slider .play-btn");
  const videos = document.querySelectorAll(".mother-slider .video");

  // Play/Pause button click
  playButtons.forEach((btn, index) => {
    btn.addEventListener("click", () => {
      // Stop all other videos
      videos.forEach((video, i) => {
        if (i !== index) {
          video.pause();
          video.currentTime = 0;
          playButtons[i].style.display = "block";
        }
      });

      const video = videos[index];
      if (video.paused) {
        video.play();
        btn.style.display = "none";
      } else {
        video.pause();
        btn.style.display = "block";
      }

      // Show play button again when video ends
      video.addEventListener("ended", () => {
        btn.style.display = "block";
      });
    });
  });

  // When slide changes (next/prev or drag), stop all videos
  swiper.on("slideChangeTransitionStart", function () {
    videos.forEach((video, i) => {
      video.pause();
      video.currentTime = 0;
      playButtons[i].style.display = "block";
    });
  });
});


</script>
