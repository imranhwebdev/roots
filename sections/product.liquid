<script>
  function changeQty(amount) {
    const qtyInput = document.getElementById('quantity');
    let value = parseInt(qtyInput.value);
    if (!isNaN(value)) {
      value += amount;
      if (value < 1) value = 1;
      qtyInput.value = value;
    }
  }

  // Tabs
  document.addEventListener('DOMContentLoaded', function () {
    const tabBtns = document.querySelectorAll('.tab-btn');
    const tabPanes = document.querySelectorAll('.tab-pane');

    tabBtns.forEach((btn) => {
      btn.addEventListener('click', function () {
        const target = this.getAttribute('data-tab');

        // Remove active classes
        tabBtns.forEach((b) => b.classList.remove('active'));
        tabPanes.forEach((p) => p.classList.add('hidden'));

        // Add active classes
        this.classList.add('active');
        document.getElementById('tab-' + target).classList.remove('hidden');

        // Trigger Judge.me widget refresh if reviews tab is opened
        if (target === 'reviews') {
          if (window.jdgm && window.jdgm.reviewWidget) {
            window.jdgm.reviewWidget.render();
          }
        }
      });
    });

    // Initialize Judge.me after DOM is loaded
    if (window.jdgm) {
      window.jdgm.customizeBadge({
        hideEmptyBadges: false,
      });
    }
  });
</script>

