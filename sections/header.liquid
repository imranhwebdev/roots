<!-- Topbar -->
<div class="topbar bg-[#FFD500] text-black text-sm py-2 px-6">
  <div class="container">
    <div class="topbar-inner  flex justify-between items-center">
      <div class="flex items-center gap-3">
        <span class="text-[#21201E] text-lg leading-normal">Follow Us</span>
        <a href="#" aria-label="Instagram">{% render 'icon-instagram' %}</a>
        <a href="#" aria-label="Twitter">{% render 'icon-twitter' %}</a>
        <a href="#" aria-label="Facebook">{% render 'icon-facebook' %}</a>
      </div>

      <!-- Center -->
      <p class="hidden md:block text-lg leading-normal text-[#21201E]">Sign up get 20% Off for all collection</p>

      <!-- Right -->
      <div class="flex items-center gap-2">
        <span>ðŸ“ž 1 (100) 234-5678</span>
      </div>
    </div>
  </div>
</div>

<!-- Main Header -->
<header class="main-header bg-[#1E6B43] text-white py-4 px-6">
  <div class="container">
    <div class="header-inner flex justify-between items-center">
      <!-- Logo -->
      <div>
        <h1 class="text-3xl font-bold font-serif tracking-wide">
          <a href="{{ routes.root_url }}">Roots</a>
        </h1>
      </div>

      <!-- Desktop Menu -->
      <nav class="hidden md:flex gap-6">
        {% for link in section.settings.menu.links %}
          <a href="{{ link.url }}" class="text-lg text-white font-poppins hover:text-[#FFD500] transition">
            {{- link.title -}}
          </a>
        {% endfor %}
      </nav>

      <!-- Right Icons -->
      <div class="flex items-center gap-4">
        <!-- Cart -->
        <a
          href="{{ routes.cart_url }}"
          class="relative flex items-center gap-1 text-lg font-poppins text-white hover:text-[#FFD500] transition"
        >
          {% if cart.item_count > 0 %}
            <sup class="absolute -top-2 -right-2 bg-[#FFD500] text-black rounded-full text-xs px-1">
              {{ cart.item_count }}
            </sup>
          {% endif %}
          {% render 'icon-cart' %} Cart
        </a>

        <!-- Sign Up Button -->
        <a
          href="{{routes.account_register_url}}"
          class="bg-primary text-[#1F1904] px-6 py-2.5 rounded-full font-poppins text-lg font-medium hover:text-white transition-all duration-300"
        >
          Sign Up
        </a>

        <!-- Mobile Menu Toggle -->
        <button id="menuToggle" class="md:hidden cursor-pointer hover:text-[#FFD500] transition">
          <svg width="40" height="40" viewBox="0 0 40 40" fill="none" xmlns="http://www.w3.org/2000/svg">
            <rect x="0.5" y="0.5" width="39" height="39" rx="11.5" stroke="#E3E2E0"/>
            <path d="M11 20L29 20M11 26L29 26M17 14L29 14" stroke="white" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>
      </div>
    </div>
  </div>
</header>

<!-- Offcanvas Mobile Menu -->
<div id="mobileMenu" class="fixed inset-0 bg-black/50 left-0 top-0 hidden z-50 cursor-pointer">
  <!-- Menu Content -->
  <div
    id="mobileMenuPanel"
    class="bg-white w-64 h-full p-6 flex flex-col transform translate-x-0 transition-transform duration-300 ease-in-out"
  >
    <button id="menuClose" class="self-end mb-6 text-xl cursor-pointer">âœ•</button>
    {% for link in section.settings.menu.links %}
      <a href="{{ link.url }}" class="block py-2 text-lg border-b">{{ link.title }}</a>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Custom Header",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "Navigation Menu"
    }
  ]
}
{% endschema %}
