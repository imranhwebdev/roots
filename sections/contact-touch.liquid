<div class="contact py-17.5 md:py-20 lg:py-25 xl:py-37.5 2xl:pb-40">
  <div class="container">
    <div class="flex flex-col md:flex-row flex-wrap md:flex-nowrap gap-5 md:gap-8 lg:gap-12">
      <div class="w-full md:7/12 xl:gap-15 mb-4 md:mb-0">
        <div class="mb-5 md:mb-8 xl:mb-10">
          <h2 class="text-2xl md:text-3xl lg:text-4xl xl:text-[44px] text-green !leading-[1.25] font-bold font-armany-bold mb-3 md:mb-4">
            {{ section.settings.heading }}
          </h2>
          <p class="text-base lg:text-lg xl:text-xl !leading-[1.6] text-[#797375] font-medium mb-3 lg:mb-4 font-poppins">
            {{ section.settings.subheading }}
          </p>
        </div>

        <div>
          {% form 'contact' %}
            {% if form.posted_successfully? %}
              <p class="p-4 bg-[#1E6C44] text-white rounded-xl mb-4">Thank you! Your message has been sent.</p>
            {% endif %}

            {% if form.errors %}
              <div class="p-4 bg-red-100 text-red-700 rounded mb-4">
                {{ form.errors | default_errors }}
              </div>
            {% endif %}

            <div class="flex flex-col lg:flex-row gap-4 md:gap-6 lg:gap-7.5 w-full mb-4 lg:mb-5">
              <div class="flex-grow">
                <label
                  for="contact_name"
                  class="text-base lg:text-lg font-medium !leading-[1.5] text-[#514849] mb-3 block"
                >
                  Your Name <span class="!text-red-500">*</span>
                </label>
                <input
                  type="text"
                  id="contact_name"
                  name="contact[name]"
                  class="w-full rounded-lg lg:rounded-xl border border-[#E3E2E0] p-3 lg:p-4.5 text-[#514849] placeholder:text-[#D1CDCE] focus:text-nome"
                  placeholder="Name"
                  required
                >
              </div>

              <div class="flex-grow">
                <label
                  for="contact_email"
                  class="text-base lg:text-lg font-medium !leading-[1.5] text-[#514849] mb-3 block"
                >
                  Your Email <span class="text-red-500">*</span>
                </label>
                <input
                  type="email"
                  id="contact_email"
                  name="contact[email]"
                  class="w-full rounded-lg lg:rounded-xl border border-[#E3E2E0] p-3 lg:p-4.5 text-[#514849] placeholder:text-[#D1CDCE] focus:text-nome"
                  placeholder="Email"
                  required
                >
              </div>
            </div>

            <div>
              <p class="text-base lg:text-lg font-medium !leading-[1.5] text-[#514849] mb-2 block">
                Your Message<span class="text-red-500">*</span>
              </p>
              <textarea
                name="contact[body]"
                class="w-full h-40 md:h-50 lg:h-60 xl:h-60 rounded-lg lg:rounded-xl border border-[#E3E2E0] p-4 lg:p-5 mb-5 md:mb-6 xl:mb-8"
                placeholder="Message"
                required
              ></textarea>
              <button type="submit" class="btn">Send Message</button>
            </div>
          {% endform %}
        </div>
      </div>

      <div class="w-full md:5/12 rounded-2xl lg:rounded-[20px] p-5 md:p-7 lg:p-9 xl:p-11 2xl:p-12.5 bg-[#1E6C44]">
        <div class=" flex flex-col justify-between h-full">
          <div class="mb-7.5 md:mb-9 lg:mb-11 xl:mb-12.5">
            <h6 class="text-lg lg:text-xl xl:text-2xl font-medium !leading-[1.5] text-white mb-3 lg:mb-4 font-poppins">
              Address
            </h6>
            <p class="md:pr-[20%] xl:pr-[40%] 3xl:pr-[50%] text-lg lg:text-xl !leading-[1.6] text-[#B7D6C6] font-poppins">
              {{ section.settings.address }}
            </p>
          </div>

          <div class="mb-7.5 md:mb-9 lg:mb-11 xl:mb-12.5">
            <h6 class="text-lg lg:text-xl xl:text-2xl font-medium !leading-[1.5] text-white mb-3 lg:mb-4">Contact</h6>
            <div class="md:pr-[20%] xl:pr-[40%] 3xl:pr-[50%]">
              <p class="text-sm lg:text-base !leading-[1.6] text-[#B7D6C6] font-poppins mb-2 lg:mb-3">
                Email : <span class="text-white">{{ section.settings.email }}</span>
              </p>
              <p class="text-sm lg:text-base !leading-[1.6] text-[#B7D6C6] font-poppins mb-2 lg:mb-3">
                Phone : <span class="text-white">{{ section.settings.phone }}</span>
              </p>
            </div>
          </div>

          <div>
            <h6 class="text-lg lg:text-xl xl:text-2xl font-medium !leading-[1.5] text-white mb-3 lg:mb-4">Follow</h6>
            <div class="flex items-center gap-3">
              {% for block in section.blocks %}
                <a
                  href="{{ block.settings.url }}"
                  class="size-12 md:size-14 rounded-full bg-primary p-3.5 flex items-center justify-center transform hover:scale-[1.04] ease-in-out duration-300"
                >
                  <img
                    src="{{ block.settings.icon | img_url: '64x64' }}"
                    width=""
                    height=""
                    class="size-full"
                    alt="social"
                  >
                </a>
              {% endfor %}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  {% if section.settings.map_url != blank %}
    <div class="google-map-area w-full h-75 md:h-100 lg:h-110 xl:h-170 mt-10 lg:mt-17 md:mt-25">
      <iframe
        src="{{ section.settings.map_url }}"
        class="size-full"
        style="border:0;"
        allowfullscreen=""
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade"
      ></iframe>
    </div>
  {% endif %}
</div>

{% schema %}
{
  "name": "Contact Us",
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading", "default": "Get in touch" },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Have a question or need help? We're here for you."
    },
    {
      "type": "text",
      "id": "address",
      "label": "Address",
      "default": "123 Greenway Boulevard, Suite 200 Austin, TX 78701, USA"
    },
    { "type": "text", "id": "email", "label": "Email", "default": "inforoots@gmail.com" },
    { "type": "text", "id": "phone", "label": "Phone", "default": "8633036189" },
    { "type": "text", "id": "open_time_1", "label": "Open Time Line 1", "default": "Monday - Friday: 10:00 - 20:00" },
    {
      "type": "text",
      "id": "open_time_2",
      "label": "Open Time Line 2",
      "default": "Saturday - Sunday : 11:00 - 18:00"
    },
    {
      "type": "url",
      "id": "map_url",
      "label": "Google Map Embed URL"
    }
  ],
  "blocks": [
    {
      "type": "social",
      "name": "Social Icon",
      "settings": [
        { "type": "image_picker", "id": "icon", "label": "Icon" },
        { "type": "url", "id": "url", "label": "Link" }
      ]
    }
  ],
  "presets": [{ "name": "Contact Us" }]
}
{% endschema %}
<script>
  document.addEventListener('DOMContentLoaded', function () {
    const successMsg = document.getElementById('contact-success-msg');
    if (successMsg) {
      setTimeout(() => {
        successMsg.style.display = 'none';
      }, 3000);
    }
  });
</script>
