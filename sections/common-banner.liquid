<section class="common-banner">
  <div class="container">
    
    <div class="banner-wrapper">
      <h1 class="text-3xl font-bold">
        {% if page.metafields.custom.banner_title != blank %}
          {{ page.metafields.custom.banner_title }}
        {% else %}
          {{ section.settings.default_title }}
        {% endif %}
      </h1>
      <p class="mt-2 text-lg">
        {% if page.metafields.custom.banner_description != blank %}
          {{ page.metafields.custom.banner_description }}
        {% else %}
          {{ section.settings.default_description }}
        {% endif %}
      </p>
    </div>
  </div>
</section>
