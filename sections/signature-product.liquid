{% schema %}
{
  "name": "Signature Product",
  "settings": [
    {
      "type": "product",
      "id": "product",
      "label": "Select Product"
    }
  ],
  "presets": [
    {
      "name": "Signature Product"
    }
  ]
}
{% endschema %}

{% if section.settings.product != blank %}
  {% assign product = all_products[section.settings.product] %}
  <section class="signature py-12" style="background:#f5f2da;">
    <div class="container mx-auto grid md:grid-cols-2 items-center gap-8">
      <!-- Product Info -->
      <div>
        <h2 class="text-2xl font-bold mb-4">Our Signature - {{ product.title }}</h2>
        <p class="mb-4">{{ product.description | strip_html | truncatewords: 40 }}</p>

        <ul class="mb-6 space-y-2 text-green-800 font-medium">
          <li>✔ USDA Organic Certified</li>
          <li>✔ Cold-Pressed & Unrefined</li>
          <li>✔ Hexane-Free & Cruelty-Free</li>
          <li>✔ Multi-purpose for hair, skin, lashes, and brows</li>
        </ul>

        <div class="flex items-center gap-4">
          <a
            href="{{ product.url }}"
            class="bg-yellow-400 px-6 py-2 rounded-full font-semibold hover:bg-yellow-500 transition"
          >
            Shop Now →
          </a>
          <span class="font-bold text-lg">${{ product.price | money_without_currency }}</span>
        </div>
      </div>

      <!-- Product Image -->
      <div class="relative">
        <div class="bg-[#35734c] p-6 rounded-xl shadow-lg">
          <img src="{{ product.featured_image | img_url: '600x600' }}" alt="{{ product.title }}" class="mx-auto">
        </div>
      </div>
    </div>
  </section>
{% endif %}
