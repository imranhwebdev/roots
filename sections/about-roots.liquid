<div class="why-roots px-4 py-10 md:py-12 lg:py-16 xl:pt-20 xl:pb-25 bg-[#B7D6C6]">
  <div class="container">
    {% if section.settings.heading != blank %}
      <h2 class="text-2xl md:text-3xl lg:text-4xl xl:text-[44px] text-center text-green !leading-[1.25] font-bold font-armany-bold mb-10 md:mb-12 lg:mb-14 xl:mb-15">
        {{ section.settings.heading }}
      </h2>
    {% endif %}

    <div class="flex justify-between gap-3 flex-col md:flex-row flex-wrap md:flex-nowrap 3xl:px-[5%]">
      <!-- Left Column Features -->
      <div class="w-full md:w-1/2 lg:w-4/12">
        {% for block in section.blocks %}
          {% if block.type == 'feature' and block.settings.position == 'left' %}
            <div class="rounded-2xl lg:rounded-[20px] p-4 lg:p-5 xl:p-6 2xl:p-7.5 bg-white mb-4 md:mb-5 lg:mb-7 xl:mb-8">
              <span class="flex items-center justify-center size-10 lg:size-14 xl:size-17 rounded-full bg-[#B7D6C6] mb-4 md:mb-5 lg:mb-6">
                <img
                  {% if block.settings.icon != blank %}
                    src="{{ block.settings.icon | image_url }}"
                  {% else %}
                    src="{{ 'star.svg' | asset_url }}"
                  {% endif %}
                  alt="{{ block.settings.title | escape }}"
                  width=""
                  height=""
                >
              </span>
              <h6 class="text-xl lg:text-2xl font-medium !leading-[1.6] text-green mb-3 lg:mb-4 font-poppins">
                {{ block.settings.title }}
              </h6>
              <p class="text-sm lg:text-lg !leading-[1.6] font-poppins text-[#797375]">
                {{ block.settings.text }}
              </p>
            </div>
          {% endif %}
        {% endfor %}
      </div>

      <!-- Middle Image -->
      <div class="w-full md:w-1/2 lg:w-4/12">
        <div class="w-full h-full md:h-80 lg:h-100 xl:h-120 2xl:h-156.5">
          <img
            {% if section.settings.main_image != blank %}
              src="{{ section.settings.main_image | image_url }}"
            {% else %}
              src="{{ 'product4.png' | asset_url }}"
            {% endif %}
            class="size-full rounded-2xl lg:rounded-[20px]"
            width=""
            height=""
            alt="{{ section.settings.heading | escape }}"
          >
        </div>
      </div>

      <!-- Right Column Features -->
      <div class="w-full md:w-1/2 lg:w-4/12">
        {% for block in section.blocks %}
          {% if block.type == 'feature' and block.settings.position == 'right' %}
            <div class="rounded-2xl lg:rounded-[20px] p-4 lg:p-5 xl:p-6 2xl:p-7.5 bg-white mb-4 md:mb-5 lg:mb-7 xl:mb-8">
              <span class="flex items-center justify-center size-10 lg:size-14 xl:size-17 rounded-full bg-[#B7D6C6] mb-4 md:mb-5 lg:mb-6">
                <img
                  {% if block.settings.icon != blank %}
                    src="{{ block.settings.icon | image_url }}"
                  {% else %}
                    src="{{ 'love.svg' | asset_url }}"
                  {% endif %}
                  alt="{{ block.settings.title | escape }}"
                  width=""
                  height=""
                >
              </span>
              <h6 class="text-xl lg:text-2xl font-medium !leading-[1.6] text-green mb-3 lg:mb-4 font-poppins">
                {{ block.settings.title }}
              </h6>
              <p class="text-sm lg:text-lg !leading-[1.6] font-poppins text-[#797375]">
                {{ block.settings.text }}
              </p>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Why Roots Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Why Roots?"
    },
    {
      "type": "image_picker",
      "id": "main_image",
      "label": "Main Center Image"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature Box",
      "settings": [
        {
          "type": "select",
          "id": "position",
          "label": "Column Position",
          "default": "left",
          "options": [
            { "value": "left", "label": "Left Column" },
            { "value": "right", "label": "Right Column" }
          ]
        },
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Feature Icon"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Feature Title",
          "default": "Feature Title"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Feature Description",
          "default": "Feature description goes here..."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Why Roots Section",
      "blocks": [{ "type": "feature" }, { "type": "feature" }, { "type": "feature" }, { "type": "feature" }]
    }
  ]
}
{% endschema %}
