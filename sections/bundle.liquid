{% assign collection = collections[section.settings.collection] %}

{% if collection and collection.products.size > 0 %}
  {% for product in collection.products %}
    {% assign layout_index = forloop.index0 | modulo: 3 %}

    {% case layout_index %}
      {% when 0 %}
        {%- assign product1 = product -%}
        {% comment %} Layout 1 {% endcomment %}
        <!-- Paste your full Layout 1 structure here, replacing product1 with product -->
        {% include 'layout-1', product: product1 %}

      {% when 1 %}
        {%- assign product2 = product -%}
        {% comment %} Layout 2 {% endcomment %}
        <!-- Paste your full Layout 2 structure here, replacing product2 with product -->
        {% include 'layout-2', product: product2 %}

      {% when 2 %}
        {%- assign product3 = product -%}
        {% comment %} Layout 3 {% endcomment %}
        <!-- Paste your full Layout 3 structure here, replacing product3 with product -->
        {% include 'layout-3', product: product3 %}
    {% endcase %}
  {% endfor %}
{% endif %}

{% schema %}
{
  "name": "3 Layout Auto Collection",
  "settings": [
    {
      "type": "collection",
      "id": "collection",
      "label": "Select Collection"
    }
  ],
  "presets": [
    {
      "name": "3 Layout Auto Collection"
    }
  ]
}
{% endschema %}
