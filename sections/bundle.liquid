<div class="multi-layout-products">
  {% for block in section.blocks %}
    {% assign product = all_products[block.settings.product] %}
    {% if product %}
      {% assign layout_type = forloop.index0 | modulo: 3 %}

      {% case layout_type %}
        {% when 0 %}
          <!-- Layout 1 -->
          <section class="bg-[#B7D6C6] py-10">
            <div class="container flex flex-col md:flex-row items-center gap-6">
              <div class="w-full md:w-1/2">
                <img src="{{ product.featured_image | image_url }}" alt="{{ product.title }}" class="rounded-lg">
              </div>
              <div class="w-full md:w-1/2">
                <h3 class="text-3xl font-bold mb-4">{{ product.title }}</h3>
                <div class="mb-4">{{ product.description | strip_html | truncatewords: 25 }}</div>
                <p class="text-xl font-semibold mb-4">{{ product.price | money }}</p>
                <a href="{{ product.url }}" class="btn">View Product</a>
              </div>
            </div>
          </section>

        {% when 1 %}
          <!-- Layout 2 -->
          <section class="bg-white py-10">
            <div class="container flex flex-col md:flex-row items-center gap-6">
              <div class="w-full md:w-1/2 order-2 md:order-1">
                <h3 class="text-3xl font-bold mb-4">{{ product.title }}</h3>
                <div class="mb-4">{{ product.description | strip_html | truncatewords: 25 }}</div>
                <p class="text-xl font-semibold mb-4">{{ product.price | money }}</p>
                <a href="{{ product.url }}" class="btn">View Product</a>
              </div>
              <div class="w-full md:w-1/2 order-1 md:order-2">
                <img src="{{ product.featured_image | image_url }}" alt="{{ product.title }}" class="rounded-lg">
              </div>
            </div>
          </section>

        {% when 2 %}
          <!-- Layout 3 -->
          <section class="bg-[#F0ECDC] py-10 text-center">
            <div class="container">
              <img
                src="{{ product.featured_image | image_url }}"
                alt="{{ product.title }}"
                class="mx-auto mb-6 rounded-lg"
              >
              <h3 class="text-3xl font-bold mb-4">{{ product.title }}</h3>
              <div class="mb-4">{{ product.description | strip_html | truncatewords: 25 }}</div>
              <p class="text-xl font-semibold mb-4">{{ product.price | money }}</p>
              <a href="{{ product.url }}" class="btn">View Product</a>
            </div>
          </section>
      {% endcase %}
    {% endif %}
  {% endfor %}
</div>
{% schema %}
{
  "name": "Multi Layout Product Section",
  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Select Product"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Multi Layout Products",
      "blocks": [{ "type": "product" }, { "type": "product" }, { "type": "product" }]
    }
  ]
}
{% endschema %}
