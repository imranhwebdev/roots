      "default": "Stay Connected"
    },
    {
      "type": "text",
      "id": "copyright_text",
      "label": "Copyright Text",
      "default": "© 2025 Roots Organic Castor Oil."
    },
    {
      "type": "checkbox",
      "id": "show_payment_icons",
      "label": "Show Payment Icons",
      "default": true
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Footer Background Image"
    }
  ],
  "blocks": [
    {
      "type": "social_link",
      "name": "Social Link",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Social Platform Name"
        },
        {
          "type": "url",
          "id": "url",
          "label": "Social Link URL"
        },
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Social Icon (for mobile)"
