      ]
    },
    {
      "type": "payment_icon",
      "name": "Payment Icon",
      "settings": [
        {
          "type": "text",
          "id": "name",
          "label": "Payment Method Name"
        },
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Payment Icon"
        }
      ]
    }
  ],
  "presets": [
