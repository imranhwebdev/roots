{% stylesheet %}
  @media screen and (max-width: 1280px) {
    .banner .swiper-horizontal > .swiper-pagination-bullets,
    .banner .swiper-pagination-bullets.swiper-pagination-horizontal,
    .banner .swiper-pagination-custom,
    .banner .swiper-pagination-fraction {
      bottom: var(--swiper-pagination-bottom, 45px) !important;
    }
  }

  @media screen and (max-width: 768px) {
    .banner .swiper-horizontal > .swiper-pagination-bullets,
    .banner .swiper-pagination-bullets.swiper-pagination-horizontal,
    .banner .swiper-pagination-custom,
    .banner .swiper-pagination-fraction {
      bottom: var(--swiper-pagination-bottom, 30px) !important;
      width: 42%;
    }
    span.swiper-pagination-bullet {
      width: 90px !important;
    }
  }
  @media screen and (max-width: 390px) {
    .banner .swiper-horizontal > .swiper-pagination-bullets,
    .banner .swiper-pagination-bullets.swiper-pagination-horizontal,
    .banner .swiper-pagination-custom,
    .banner .swiper-pagination-fraction {
      bottom: var(--swiper-pagination-bottom, 45px);
      width: 55% !important;
    }

    span.swiper-pagination-bullet {
      width: 50px !important;
    }
  }
{% endstylesheet %}

<div class="banner overflow-hidden bg-[#1E6C44]">
  <div class="swiper banner-slider">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        <div class="swiper-slide">
          <div class="pt-16 lg:pt-19 pb-4 relative z-1">
            <div class="container mx-auto flex flex-col md:flex-row flex-wrap justify-between items-start overflow-hidden">
              <div div class="w-full md:w-6/12 mt-5 md:mt-6 lg:mt-7 xl:mt-10 mb-4 md:mb-0">
                <span class="text-xs md:text-base uppercase font-poppins leading-tight tracking-[1.92px] text-[#EEEFEE] bg-[rgba(255,255,255,0.10)] border border-solid border-[rgba(255,255,255,0.12)] rounded-[20px] py-2.5 px-4 mb-5 inline-block"
                  >Made in USA â€¢ Cold-Pressed</span
                >
                <h1 class="font-armany-bold text-[28px] md:text-[28px] lg:text-4xl xl:text-6xl !text-white font-bold leading-tight mb-2 md:mb-3 lg:mb-3.5 uppercase max-w-[752px]">
                  {{ block.settings.heading }}
                </h1>
                <p class="text-[#B7D6C6] text-sm md:text-lg lg:text-xl !leading-[1.6] font-poppins font-normal max-w-[717px]">
                  {{ block.settings.des }}
                </p>
                <div class="relative flex items-center gap-5 z-1 max-w-max group mt-7.5">
                  <a
                    href="{{ block.settings.button_link }}"
                    class="btn"
                  >
                    Shop Now
                    <span>
                      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="25" viewBox="0 0 24 25" fill="none">
                        <path d="M13.332 7.5L18.832 13M18.832 13L13.332 18.5M18.832 13L4.16536 13" stroke="#1F1904" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round"/>
                      </svg>
                    </span>
                  </a>

                  <a
                    href="{{ block.settings.button_link }}"
                    class="inline-btn"
                  >
                    Discover Our Story
                  </a>
                </div>
              </div>
              <div class="w-full md:w-6/12">
                <div class="w-full h-full xl:h-159.5">
                  <img
                    src="{{ block.settings.slide_image | image_url }}"
                    class="size-full"
                    width="100"
                    height="100"
                    alt="img"
                    alt=""
                  >
                </div>
              </div>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
    <div class="swiper-pagination"></div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const swiper = new Swiper('.banner-slider', {
      loop: false,
      autoplay: false,
      speed: 1200,
      pagination: {
        el: '.swiper-pagination',
        clickable: true,
      },
      navigation: false,
      scrollbar: false,
      grabCursor: true,
      effect: 'slide',
    });
  });
</script>
{% schema %}
{
  "name": "Banner Slider",
  "tag": "section",
  "max_blocks": 5,
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "bg_image",
          "label": "Background Image"
        },
        {
          "type": "image_picker",
          "id": "icon_svg",
          "label": "SVG Icon"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Powered by nature, your beauty blooms."
        },
        {
          "type": "text",
          "id": "des",
          "label": "des",
          "default": "Unlock the power of nature with our premium Organic Castor Oil packed with Vitamin E, omega fatty acids, and nutrients to nourish from root to tip. Perfect for hair, lashes, brows, and skin."
        },
        {
          "type": "image_picker",
          "id": "slide_image",
          "label": "Slide Image"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button Label",
          "default": "Shop Now"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link",
          "default": "/"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Banner Slider",
      "category": "Hero"
    }
  ]
}
{% endschema %}
