{% stylesheet %}
  @media screen and (max-width: 1280px) {
    .banner .swiper-horizontal > .swiper-pagination-bullets,
    .banner .swiper-pagination-bullets.swiper-pagination-horizontal,
    .banner .swiper-pagination-custom,
    .banner .swiper-pagination-fraction {
      bottom: var(--swiper-pagination-bottom, 45px) !important;
    }
  }

  @media screen and (max-width: 768px) {
    .banner .swiper-horizontal > .swiper-pagination-bullets,
    .banner .swiper-pagination-bullets.swiper-pagination-horizontal,
    .banner .swiper-pagination-custom,
    .banner .swiper-pagination-fraction {
      bottom: var(--swiper-pagination-bottom, 30px) !important;
      width: 42%;
    }
    span.swiper-pagination-bullet {
      width: 90px !important;
    }
  }
  @media screen and (max-width: 390px) {
    .banner .swiper-horizontal > .swiper-pagination-bullets,
    .banner .swiper-pagination-bullets.swiper-pagination-horizontal,
    .banner .swiper-pagination-custom,
    .banner .swiper-pagination-fraction {
      bottom: var(--swiper-pagination-bottom, 45px);
      width: 55% !important;
    }

    span.swiper-pagination-bullet {
      width: 50px !important;
    }
  }
{% endstylesheet %}

<div class="banner overflow-hidden">
  <div class="swiper banner-slider">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        <div class="swiper-slide">
          <div class="pt-16 lg:pt-19 pb-4 relative z-1">
            {% if block.settings.bg_image != blank %}
              <img
                class="absolute left-0 top-0 w-full h-full object-cover object-top -z-1"
                src="{{ block.settings.bg_image | image_url}}"
                width=""
                height=""
                alt=""
              >
            {% endif %}
            <div class="size-full bg-black/40 absolute left-0 top-0 -z-1"></div>
            <div class="container mx-auto flex flex-col md:flex-row flex-wrap justify-between items-start overflow-hidden">
              <div div class="w-full md:w-5/12 mt-5 md:mt-6 lg:mt-7 xl:mt-10 mb-4 md:mb-0">
                <button class="mb-6 md:mb-8 lg:mb-10 xl:mb-14 !w-10 md:!w-12 lg:!w-15 h-7 md:!h-8 lg:!h-10">
                  {% if block.settings.icon_svg != blank %}
                    <img
                      src="{{ block.settings.icon_svg | image_url }}"
                      width=""
                      height=""
                      alt="{{ block.settings.title }}"
                      class="w-8 h-8 object-contain"
                    >
                  {% endif %}
                </button>
                <h1 class="text-3xl md:text-[28px] lg:text-4xl xl:text-[52px] !text-white font-bold !leading-[1.2] mb-2 md:mb-3 lg:mb-3.5 uppercase">
                  {{ block.settings.heading }}
                </h1>
                <p class="text-white text-lg lg:text-[22px] !leading-[1.4] mb-5 md:mb-7 lg:mb-10 xl:mb-18">
                  {{ block.settings.subheading }} hi daplug
                </p>
                <div class="relative z-1 max-w-max group">
                  <a
                    href="{{ block.settings.button_link }}"
                    class="text-base font-bold text-white py-3 lg:py-3.5 px-5 lg:px-6.5 bg-green uppercase block"
                  >
                    {{- block.settings.button_label -}}
                  </a>
                  <div
                    class="py-3 lg:py-3.5 px-5 group-hover:hidden duration-500 ease-in-out transition-all lg:px-6.5 absolute -z-1 size-full border-[1.5px] border-green top-1 left-1"
                  ></div>
                </div>
              </div>
              <div class="w-full md:w-7/12">
                <div class="w-full h-full xl:h-159.5">
                  <img
                    src="{{ block.settings.slide_image | image_url }}"
                    class="size-full"
                    width="100"
                    height="100"
                    alt="img"
                    alt=""
                  >
                </div>
              </div>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
    <div class="swiper-pagination"></div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const swiper = new Swiper('.banner-slider', {
      loop: false,
      autoplay: false,
      speed: 1200,
      pagination: {
        el: '.swiper-pagination',
        clickable: true,
      },
      navigation: false,
      scrollbar: false,
      grabCursor: true,
      effect: 'slide',
    });
  });
</script>
{% schema %}
{
  "name": "Banner Slider",
  "tag": "section",
  "max_blocks": 5,
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "bg_image",
          "label": "Background Image"
        },
        {
          "type": "image_picker",
          "id": "icon_svg",
          "label": "SVG Icon"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Smarter Soccer Starts Here"
        },
        {
          "type": "text",
          "id": "subheading",
          "label": "Subheading",
          "default": "Premium soccer gear for players who demand the best. From pro-level cleats to authentic jerseys"
        },
        {
          "type": "image_picker",
          "id": "slide_image",
          "label": "Slide Image"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button Label",
          "default": "Shop Now"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link",
          "default": "/"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Banner Slider",
      "category": "Hero"
    }
  ]
}
{% endschema %}
