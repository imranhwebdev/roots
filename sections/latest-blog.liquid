<!-- sections/latest-blog.liquid -->
<div
  class="latest-blog py-10 md:py-12 lg:py-15 xl:py-20 2xl:py-25"
  style="background-color: {{ section.settings.bg_color }}"
>
  <div class="container">
    <div class="mx-auto w-full 3xl:w-11/12">
      <div class="flex  items-center flex-col md:flex-row flex-wrap gap-5 3xl:gap-37.5 md:flex-nowrap">
        <!-- Left Column - Text Section -->
        <div class="w-full md:w-5/12 lg:w-5/12">
          <div class="section-title text-center md:text-start w-full ">
            <h2 class="text-2xl md:text-3xl lg:text-4xl xl:text-[44px] text-green !leading-[1.25] font-bold font-armany-bold mb-4">
              {{ section.settings.title }}
            </h2>
            <p class="lg:pr-8 text-base md:text-lg lg:text-xl font-poppins !leading-[1.6] text-[#514849] mb-6">
              {{ section.settings.description }}
            </p>
            {% if section.settings.button_text != blank and section.settings.button_link != blank %}
              <a
                href="{{ section.settings.button_link }}"
                class="btn flex items-center gap-3 mx-auto md:mx-0 max-w-max"
              >
                {{ section.settings.button_text }}
                <svg width="17" height="13" viewBox="0 0 17 13" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M10.332 1L15.832 6.5M15.832 6.5L10.332 12M15.832 6.5L1.16536 6.5" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </a>
            {% endif %}
          </div>
        </div>

        <!-- Right Column - Blog Posts -->
        <div class="w-full md:w-7/12 lg:w-7/12">
          {% assign selected_blog = blogs[section.settings.blog_handle] %}
          {% assign posts_count = section.settings.posts_count | default: 4 %}

          {% if selected_blog and selected_blog.articles.size > 0 %}
            <!-- Dynamic grid based on posts count -->
            {% if posts_count == 2 %}
              {% assign grid_class = 'grid-cols-1 md:grid-cols-2' %}
            {% elsif posts_count == 3 %}
              {% assign grid_class = 'grid-cols-1 md:grid-cols-3' %}
            {% else %}
              {% assign grid_class = 'grid-cols-2' %}
            {% endif %}

            <div class="grid {{ grid_class }} gap-4 lg:gap-6 2xl:gap-8">
              {% if section.settings.sort_order == 'asc' %}
                {% assign sorted_articles = selected_blog.articles | reverse %}
                {% for article in sorted_articles limit: posts_count %}
                  <div class="flex flex-col justify-between rounded-xl lg:rounded-2xl bg-white p-2.5 lg:px-2 lg:pt-2 lg:pb-5">
                    <div>
                      {% if article.image != blank %}
                        <div class="w-full h-25 md:h-28 lg:h-35 2xl:h-52 mb-2.5 md:mb-4 xl:mb-5">
                          <img
                            src="{{ article.image | img_url: '1024x' }}"
                            class="size-full rounded-xl object-cover"
                            width="{{ article.image.width }}"
                            height="{{ article.image.height }}"
                            alt="{{ article.image.alt | default: article.title }}"
                            loading="lazy"
                          >
                        </div>
                      {% else %}
                        <div class="w-full h-25 md:h-28 lg:h-35 2xl:h-52 mb-2.5 md:mb-4 xl:mb-5 bg-gray-200 rounded-xl flex items-center justify-center">
                          <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                          </svg>
                        </div>
                      {% endif %}
                    </div>
                    <div class="lg:pl-2.5 flex flex-col justify-between">
                      <a href="{{article.url}}" class="group">
                        <h6 class="text-sm md:text-base lg:text-xl xl:text-2xl text-[#21201E] group-hover:text-primary font-medium !leading-[1.4] mb-2 lg:mb-3 font-poppins">
                          {{ article.title }}
                        </h6>
                      </a>
                      <a
                        href="{{ article.url }}"
                        class="text-sm md:text-base lg:text-lg font-medium text-[#CAA000] !leading-[1.2] flex items-center gap-1 lg:gap-2 font-poppins"
                      >
                        Read More
                        <span>
                          <svg
                            width="17"
                            height="13"
                            viewBox="0 0 17 13"
                            fill="none"
                            xmlns="http://www.w3.org/2000/svg"
                          >
                            <path d="M10.332 1L15.832 6.5M15.832 6.5L10.332 12M15.832 6.5L1.16536 6.5" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round"/>
                          </svg>
                        </span>
                      </a>
                    </div>
                  </div>
                {% endfor %}
              {% else %}
                {% for article in selected_blog.articles limit: posts_count %}
                  <div class="rounded-xl lg:rounded-2xl bg-white p-2.5 lg:px-2 lg:pt-2 lg:pb-5">
                    {% if article.image != blank %}
                      <div class="w-full h-25 md:h-28 lg:h-35 2xl:h-52 mb-2.5 md:mb-4 xl:mb-5">
                        <img
                          src="{{ article.image | img_url: '1024x' }}"
                          class="size-full rounded-xl object-cover"
                          width="{{ article.image.width }}"
                          height="{{ article.image.height }}"
                          alt="{{ article.image.alt | default: article.title }}"
                          loading="lazy"
                        >
                      </div>
                    {% else %}
                      <div class="w-full h-25 md:h-28 lg:h-35 2xl:h-52 mb-2.5 md:mb-4 xl:mb-5 bg-gray-200 rounded-xl flex items-center justify-center">
                        <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                        </svg>
                      </div>
                    {% endif %}
                    <div class="lg:pl-2.5">
                      <a href="{{ article.url }}" class="group">
                        <h6 class="text-sm md:text-base lg:text-xl xl:text-2xl text-[#21201E] group-hover:text-primary transition-all duration-300 font-medium !leading-[1.4] mb-2 lg:mb-3 font-poppins">
                          {{ article.title }}
                        </h6>
                      </a>
                      <a
                        href="{{ article.url }}"
                        class="text-sm md:text-base lg:text-lg font-medium text-[#CAA000] !leading-[1.2] flex  items-center gap-1 lg:gap-2 font-poppins group hover:text-black"
                      >
                        Read More
                        <span class="group-hover:translate-x-1  transition-all duration-300">
                          <svg
                            width="17"
                            height="13"
                            viewBox="0 0 17 13"
                            fill="none"
                            xmlns="http://www.w3.org/2000/svg"
                          >
                            <path d="M10.332 1L15.832 6.5M15.832 6.5L10.332 12M15.832 6.5L1.16536 6.5" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round"/>
                          </svg>
                        </span>
                      </a>
                    </div>
                  </div>
                {% endfor %}
              {% endif %}
            </div>
          {% else %}
            <!-- Fallback when no blog selected -->
            {% if posts_count == 2 %}
              {% assign grid_class = 'grid-cols-1 md:grid-cols-2' %}
            {% elsif posts_count == 3 %}
              {% assign grid_class = 'grid-cols-1 md:grid-cols-3' %}
            {% else %}
              {% assign grid_class = 'grid-cols-2' %}
            {% endif %}

            <div class="grid {{ grid_class }} gap-4 lg:gap-6 2xl:gap-8">
              {% for i in (1..posts_count) %}
                <div class="rounded-xl lg:rounded-2xl bg-white p-2.5 lg:px-2 lg:pt-2 lg:pb-5 opacity-50">
                  <div class="w-full h-25 md:h-28 lg:h-35 2xl:h-52 mb-2.5 md:mb-4 xl:mb-5 bg-gray-100 rounded-xl flex items-center justify-center">
                    <span class="text-gray-400 text-sm">Select Blog</span>
                  </div>
                  <div class="lg:pl-2.5">
                    <h6 class="text-sm md:text-base lg:text-xl xl:text-2xl text-gray-400 font-medium !leading-[1.4] mb-2 lg:mb-3 font-poppins">
                      Please select a blog
                    </h6>
                  </div>
                </div>
              {% endfor %}
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Latest Blog Section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Explore Our Latest Blog"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Section Description",
      "default": "Tips, insights, and natural beauty wisdom straight from our experts."
    },
    {
      "type": "blog",
      "id": "blog_handle",
      "label": "Select Blog",
      "info": "Choose which blog to display posts from"
    },
    {
      "type": "range",
      "id": "posts_count",
      "min": 2,
      "max": 6,
      "step": 1,
      "label": "Number of Posts",
      "default": 4,
      "info": "Select how many blog posts to display (2-6)"
    },
    {
      "type": "select",
      "id": "sort_order",
      "label": "Sort Order",
      "options": [
        {
          "value": "desc",
          "label": "Newest First (DESC)"
        },
        {
          "value": "asc",
          "label": "Oldest First (ASC)"
        }
      ],
      "default": "desc",
      "info": "Choose how to sort the blog posts"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#B7D6C6"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "View All Posts"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Latest Blog",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}
