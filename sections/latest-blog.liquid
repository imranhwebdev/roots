<!-- sections/latest-blog.liquid -->
<div
  class="latest-blog py-10 md:py-12 lg:py-15 xl:py-20 2xl:py-25"
  style="background-color: {{ section.settings.bg_color }}"
>
  <div class="container">
    <div class="w-full xl:w-11/12 mx-auto">
      <div class="flex items-center flex-col md:flex-row flex-wrap gap-5 md:flex-nowrap">
        <!-- Text Column -->
        <div class="w-full md:w-5/12 lg:w-1/2">
          <div class="section-title text-center md:text-start w-full md:w-10/12 xl:w-8/12">
            <h2 class="text-2xl md:text-3xl lg:text-4xl xl:text-[44px] text-green !leading-[1.25] font-bold font-armany-bold mb-4">
              {{ section.settings.title }}
            </h2>
            <p class="lg:pr-8 text-base md:text-lg lg:text-xl font-poppins !leading-[1.6] text-[#514849] mb-6">
              {{ section.settings.description }}
            </p>
            {% if section.settings.button_text != blank and section.settings.button_link != blank %}
              <a
                href="{{ section.settings.button_link }}"
                class="btn flex items-center gap-3 mx-auto md:mx-0 max-w-max"
              >
                {{ section.settings.button_text }}
                <svg width="17" height="13" viewBox="0 0 17 13" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M10.332 1L15.832 6.5M15.832 6.5L10.332 12M15.832 6.5L1.16536 6.5" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </a>
            {% endif %}
          </div>
        </div>

        <!-- Blog Cards Column -->
        <div class="w-full md:w-7/12 lg:w-1/2">
          <div class="grid grid-cols-2 gap-4 lg:gap-6 2xl:gap-8">
            {% for blog in section.blocks %}
              <div class="rounded-xl lg:rounded-2xl bg-white p-2.5 lg:px-2 lg:pt-2 lg:pb-5">
                {% if blog.settings.blog_image != blank %}
                  <div class="w-full h-25 md:h-28 lg:h-35 2xl:h-52 mb-2.5 md:mb-4 xl:mb-5">
                    <img
                      src="{{ blog.settings.blog_image | img_url: '1024x' }}"
                      class="size-full rounded-xl"
                      width=""
                      height=""
                      alt="{{ blog.settings.blog_title }}"
                    >
                  </div>
                {% endif %}
                <div class="lg:pl-2.5">
                  <h6 class="text-sm md:text-base lg:text-xl xl:text-2xl text-[#21201E] font-medium !leading-[1.4] mb-2 lg:mb-3 font-poppins">
                    {{ blog.settings.blog_title }}
                  </h6>
                  {% if blog.settings.blog_link != blank %}
                    <a
                      href="{{ blog.settings.blog_link }}"
                      class="text-sm md:text-base lg:text-lg font-medium text-[#CAA000] !leading-[1.2] flex items-center gap-1 lg:gap-2 font-poppins"
                    >
                      Read More
                      <span>
                        <svg width="17" height="13" viewBox="0 0 17 13" fill="none" xmlns="http://www.w3.org/2000/svg">
                          <path d="M10.332 1L15.832 6.5M15.832 6.5L10.332 12M15.832 6.5L1.16536 6.5" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                      </span>
                    </a>
                  {% endif %}
                </div>
              </div>
            {% endfor %}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Latest Blog Section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Explore Our Latest Blog"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Section Description",
      "default": "Tips, insights, and natural beauty wisdom straight from our experts."
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#B7D6C6"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "View All Posts"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "blocks": [
    {
      "type": "blog_card",
      "name": "Blog Card",
      "settings": [
        {
          "type": "image_picker",
          "id": "blog_image",
          "label": "Blog Image"
        },
        {
          "type": "text",
          "id": "blog_title",
          "label": "Blog Title"
        },
        {
          "type": "url",
          "id": "blog_link",
          "label": "Blog Link"
        }
      ]
    }
  ],
  "max_blocks": 12,
  "presets": [
    {
      "name": "Latest Blog",
      "category": "Custom Sections",
      "blocks": [{ "type": "blog_card" }, { "type": "blog_card" }, { "type": "blog_card" }, { "type": "blog_card" }]
    }
  ]
}
{% endschema %}
